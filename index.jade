  section#process
    .container
      h1.sectitle Client Work
      .row
        .col-md-4.bullet-block
          img(src="./images/Logo_Baker_Electric_Solar.jpg")
          .bullet-block-text
            h4 Baker Electric Solar
            p (Development)

        .col-md-4.bullet-block
          img(src="./images/nginx-logo.png")
          .bullet-block-text
            h4 nginx.com
            p (Development)

        .col-md-4.bullet-block
          img(src="./images/yume_logo_484.jpg")
          .bullet-block-text
            h4 YuMe
            p (Design)

      h1.sectitle Internal Projects
      .row
        .col-md-4.bullet-block
          img(src="./images/logo-ching.png")
          .bullet-block-text
            h4 Ching
            p (Invoicing Tool)

        .col-md-4.bullet-block
          img(src="./images/fireform-logo.png")
          .bullet-block-text
            h4 Fireform
            p (Hosted < form >)

  section#contact.footer
    svg.crossed-seperator(xmlns='http://www.w3.org/2000/svg', version='1.1', width='100%', height='100', viewbox='0 0 100 100', preserveaspectratio='none')
      path.one(d='M0 0 L100 100 L100 0 Z')
      path.two(d='M0 100 L100 0 L0 0 Z')
    h1.sectitle Contact Us:
    .container
      .row
        .col-md-6.col-md-offset-3
          form#contact-form
            div(class="success-message") Thank you for contacting us! We'll be in touch.
            div(class="failed-message") Submission failed, please review and try again.
            div(class="form-group")
              label(for="name") Name
              <input class="form-control" type="text" id="name" name="name" required />
            div(class="form-group")
              label(for="email") Email Address
              <input class="form-control" type="email" id="email" name="email" placeholder="you@email.com" required />
            div(class="form-group")
              label(for="organization") Organization <em>(optional)</em>
              <input class="form-control" type="text" id="organization" name="organization" />
            div(class="form-group")
              label(for="message") Message <em>(optional)</em>
              <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
            <button type="submit" class="btn btn-default">Submit</button>
          .biz-card
            img.img-responsive.card-logo(src="./images/large_logo.png")
            address
              strong SF Dev Labs
              br
              | 165 Natoma St.
              br
              | San Francisco, CA 94103
              br
              | <a href="mailto:team@sfdevlabs.com">team@sfdevlabs.com</a>
  script(src="http://src.fireform.org/fireform.min.js")
  script(src="./js/jqBootstrapValidation.js")
  script.
    $(function () {
      $(".form-group input, .form-group textarea").jqBootstrapValidation();
    });
    options = {
      emailNotification:"team@sfdevlabs.com",
      emailConfirmationName:"email",
      emailConfirmationFrom:"team@sfdevlabs.com",
      emailConfirmationSubject:"Thanks for contacting SF Dev Labs",
      emailConfirmationBodyHTML:"<p>We'll respond to your message soon!</p>",
      emailConfirmationBodyText:"We'll respond to your message soon!"
    }
    new Fireform('#contact-form', 'http://fireform.org/list/26/ContactFormV1', options);
